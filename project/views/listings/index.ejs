<% layout("/layouts/boilerplate") %>
<h3>All listing</h3>
<br />
<div
  class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1 justify-content-center">
  <% for(let listing of allListing){ %>
  <a href="/listings/<%= listing._id %>">
    <div class="card h-100">
      <img
        src="<%= listing.image %>"
        class="card-img-top"
        style="height: 20rem" />
      <div class="card-body">
        <p class="card-text">
          <b><%= listing.title %></b><br />
          &#8377;<%= listing.price.toLocaleString("en-IN") %> / night
        </p>
      </div>
    </div>
  </a>
  <% } %>
</div>
