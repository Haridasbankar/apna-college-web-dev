<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-3">
    <h3><%= listing.title %></h3>
  </div>

  <div class="card col-6 offset-2 show-card listing-card">
    <img
      src="<%= listing.image %>"
      class="card-img-top show-img"
      alt="listing-image" />

    <div class="card-body">
      <p class="card-text">Owend by <i> <%= listing.username %> </i></p>
      <p class="card-text"><%= listing.description %></p>
      <p class="card-text">
        &#8377; <%= listing.price.toLocaleString("en-IN") %>
      </p>
      <p class="card-text"><%= listing.location %></p>
      <p class="card-text"><%= listing.country %></p>
    </div>
  </div>
</div>
<div
  class="d-flex justify-content-left gap-3 mt-3"
  style="margin-left: 210px; margin-bottom: 10px">
  <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning px-4"
    >Edit</a
  >

  <form method="POST" action="/listings/<%= listing._id%>?_method=DELETE">
    <button class="btn btn-danger px-4">Delete</button>
  </form>
</div>
